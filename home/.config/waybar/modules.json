{
	"sway/window": {
		"max-length": 100
	},
	"sway/scratchpad": {
		"format": "{icon} {count}",
		"format-icons": ["", "󰖯", "󰖲"],
		"tooltip-format": "{title}"
	},
	"tray": {
		"spacing": 6
	},
	"pulseaudio": {
		"format": "{icon}{volume}%",
		"format-muted": "󰖁 Silent",
		"format-icons": {
			"headphone": ["󰋋󰕿", "󰋋󰖀", "󰋋󰕾"],
			"speaker": ["󰓃󰕿", "󰓃󰖀", "󰓃󰕾"],
			"hdmi": ["󰽟󰕿", "󰽟󰖀", "󰽟󰕾"],
			"headset": ["󰋎󰕿", "󰋎󰖀", "󰋎󰕾"],
			"default": ["󰕿", "󰖀", "󰕾"]
		},
		"scroll-step": 1,
		"on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"on-click-right": "pavucontrol"
	},
	"bluetooth": {
		"format-off": "󰂲",
		"format-on": "󰂯",
		"format-connected": "󰂱 {num_connections}",
		"on-click-right": "blueman-manager"
	},
	"backlight": {
		"format": "{icon} {percent}%",
		"format-icons": ["󰛩", "󱩎", "󱩏", "󱩐", "󱩑", "󱩒", "󱩓", "󱩔", "󱩕", "󱩖", "󰛨"],
		"on-scroll-up": "brightnessctl set +1%",
		"on-scroll-down": "brightnessctl set 1%-"
	},
	"battery": {
		"format": "{icon}{capacity}%",
		"format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
	},
	"network": {
		"format-ethernet": "󰈁",
		"tooltip-format-ethernet": "{ifname} - {ipaddr}",
		"format-wifi": "{icon} {essid}",
		"tooltip-format-wifi": "{ifname} - {ipaddr} - {frequency}MHz - {signalStrength}%",
		"format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
		"format-disconnected": "󰌙",
		"tooltip-format-disconnected": "Disconnected"
	},
	"clock": {
		"format-alt": "{:%A %d %B %H:%M}",
		"tooltip-format": "<tt>{calendar}</tt>"
	},
	"keyboard-state#numlock": {
		"numlock": true,
		"format": "{}",
		"format-icons": {
			"unlocked": "",
			"locked": "󰎦"
		}
	},
	"keyboard-state#capslock": {
		"capslock": true,
		"format": "{}",
		"format-icons": {
			"unlocked": "",
			"locked": "󰪛"
		}
	},

	"group/power": {
		"orientation": "horizontal",
		"drawer": {
			"transition-left-to-right": false
		},
		"modules": [
			"idle_inhibitor",
			"custom/exit-sway",
			"custom/reboot",
			"custom/shutdown",
			"custom/sleep",
			"custom/lock"
		]
	},
	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": "󰒳 󰣇",
			"deactivated": "󰣇"
		},
		"tooltip-format-activated": "Idle inhibitor activated",
		"tooltip-format-deactivated": "Idle inhibitor deactivated"
	},
	"custom/arch-logo": {
		"format": "󰣇",
		"return-type": "json",
		"exec": "echo -e '{\"text\":\"󰣇\",\"tooltip\":\"'\"$(uname -sr)\"'\",\"class\":\"arch\"}'"
	},
	"custom/exit-sway": {
		"format": "{}",
		"return-type": "json",
		"exec": "echo -e '{\"text\":\"󰿅\",\"tooltip\":\"Exit Sway\",\"class\":\"exit\"}'",
		"on-click": "swaynag -t warning -m 'Sway will now exit.' -s 'Abort' -B 'Confirm' 'swaymsg exit'"
	},
	"custom/shutdown": {
		"format": "{}",
		"return-type": "json",
		"exec": "echo -e '{\"text\":\"󰐥\",\"tooltip\":\"Shutdown\",\"class\":\"shutdown\"}'",
		"on-click": "swaynag -t warning -m 'The device will now shut down.' -s 'Abort' -B 'Confirm' 'shutdown now'"

	},
	"custom/reboot": {
		"format": "{}",
		"return-type": "json",
		"exec": "echo -e '{\"text\":\"󰑐\",\"tooltip\":\"Reboot\",\"class\":\"reboot\"}'",
		"on-click": "swaynag -t warning -m 'The device will now reboot.' -s 'Abort' -B 'Confirm' 'reboot'"
	},
	"custom/lock": {
		"format": "{}",
		"return-type": "json",
		"exec": "echo -e '{\"text\":\"󰍁\",\"tooltip\":\"Lock\",\"class\":\"lock\"}'",
		"on-click": "swaylock"
	},
	"custom/sleep": {
		"format": "{}",
		"return-type": "json",
		"exec": "echo -e '{\"text\":\"󰤄\",\"tooltip\":\"Sleep\",\"class\":\"sleep\"}'",
		"on-click": "systemctl hybrid-sleep"
	}
}
